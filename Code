###  add cards to make it seem more card game like
import random

def deal_card():
    """Return a random card."""
    cards = [
        "2", "3", "4", "5", "6", "7", "8", "9", "10",
        "Jack", "Queen", "King", "Ace"
    ]
    return random.choice(cards)

def main():
    print("Welcome to the card game!")
    
    # Initialize cards for player and dealer
    player_cards = [deal_card(), deal_card()]
    dealer_cards = [deal_card(), deal_card()]
    
    # Show initial cards
    print("Your cards:", player_cards)
    print("Dealer's cards:", [" dealer_cards[0] , 'Hidden' ]) ## only show one card for dealer. 
    
    # Determine the winner
    player_total = sum([card_value(card) for card in player_cards])
    dealer_total = sum([card_value(card) for card in dealer_cards])
    if player_total > dealer_total:
        print("You win!")
    elif player_total < dealer_total:
        print("Dealer wins.")
    else:
        print("It's a tie!")

# Start the game
main()
